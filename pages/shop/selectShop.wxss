/* pages/shop/selectShop.wxss */
.list-nav {
    position: relative;
    z-index: 300;
    background-color: #fff; margin-top: 20rpx;
}
.searchTop{ background: #f5f5f5; padding-top: 30rpx;  position: relative;z-index: 300;}
.border-bottom-new {
    background-image: linear-gradient(0,#e1e1e1,#e1e1e1 50%,transparent 50%);
    background-position: 100% 100%;
    background-size: 100% 3rpx;
    background-repeat: no-repeat;
}

.list-nav .cat {
    padding: 20rpx 0;
}

.list-nav .cat .item.on{color: #f63;}
.list-nav .cat .item {
    width: 33%;
    box-sizing: border-box;
    float: left;
    text-align: center;
    color: #646464;
    overflow: hidden;
    height: 40rpx;
    line-height: 40rpx;
    position: relative;
     border-right: 1rpx solid #eee;
}
.list-nav .cat .item:last-child{ border: none}
.list-nav .cat .item, .to_me {
    display: block;
    background-repeat: no-repeat;
}
.list-nav .cat .item .drop {
    display: inline-block;
    width: 26rpx;
    height: 22rpx;
    background: url('data:image/png;base64,');
    background-size: 100%;
    margin-left: 10rpx;

}

.Fix:after {
    display: block;
    content: '';
    height: 0;
    clear: both;
}
.selector {
    position: absolute;
    left: 0;
    color: #323232;
    width: 100%;
    height: 575rpx;
    background-color: #fff;
}

 

 
.selector-main,selector-sub,selector-main-100{ width: 45%; box-sizing: border-box; background: #f5f5f5; height: 100%; float: left; }
 .selector-main .item.on{ background-color: #fff;border-right:none}
 .selector .item{
    display: block;
    height: 90rpx;
    line-height: 90rpx;
    color: #323232;
    padding-left: 30rpx;border-right: 1px solid #eee; width: 100%; box-sizing: border-box;
}
.selector-sub{
  width: 55%;  background: #fff; float: right;
}
.selector-main-100{width: 100%;  background: #fff; float: none;}

.selector-main-100 .item.on{     border-bottom: solid 1px #f63;color: #f63;}
.list-search .list-item {
    background-color: #fff; margin-bottom: 20rpx;
}

.border-bottom-new {
    background-image: linear-gradient(0,#e1e1e1,#e1e1e1 50%,transparent 50%);
    background-position: 100% 100%;
    background-size: 100% 1px;
    background-repeat: no-repeat;
}
.list-search .list-item .item-main {
    display: -webkit-box;
    display: flex;
    padding: 10px;
}
.list-search .list-item .item-main .item-pic {
    border-radius: 2px;
    width: 66px;
    height: 66px;
    margin-right: 10px;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 100% 100%;
    flex-shrink: 0;
    position: relative;
    box-sizing: border-box;
}
.list-search .list-item .item-main .item-content {
    -webkit-box-flex: 1;
    flex: 1;
    min-width: 0;
}
.list-search .list-item .item-main .item-content .item-comment {
    display: flex;
    margin: 16rpx 0;
    position: relative;
    -webkit-box-align: center;
    align-items: center;
}
.list-search .list-item .item-main .item-content .item-comment .item-comment-price {
    color: #333;
    margin-left: 20rpx;
}

.list-search{ height: 100%; position: fixed; top: 0; padding-top: 187rpx; box-sizing: border-box ;}